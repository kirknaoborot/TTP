@{
    ViewData["Title"] = "Home Page";
}
@model IndexViewModel

<div class="container-fluid black">
    <div class="container">
        <div class="main-title">
            <h1>TTPROFI</h1>
            <h2>КЛУБ НАСТОЛЬНОГО ТЕННИСА<br>В НИЖНЕМ НОВГОРОДЕ</h2>
            <hr align="left">
            <h3><a href="callto:+79159447834">+7 (915) 944-78-34</a> - Аренда стола, групповые и индивидуальные тренировки <br><a href="callto:+79960108441">+7 (996) 010-84-41</a> - Детские тренировки, детские групповые тренировки</h3>
            <div class="main-title-btn">
                <a href="/Tournament/Index">
                    <button class="main-title-btn-registration">РЕГИСТРАЦИЯ НА ТУРНИРЫ</button>
                </a>
                <a href="https://vk.com/ttprofinn" target="_blank">
                    <button class="main-title-btn-vk">ГРУППА VK</button>
                </a>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="container">
        <div class="section" id="services">
            <h2>УСЛУГИ</h2>
            <ul class="services-ul-items">
                @foreach (var item in Model.Services)
                {
                     <li class="services-ul-items-item">
                        <img src="@item.PathImage">
                        <h4>@item.Name</h4>
                         <div class="services-ul-items-item-p">
                            <p>@item.Price Р</p>
                        </div>
                     </li>
                }
            </ul>
        </div>
    </div>
</div>
<div class="container-fluid border-top-section">
    <div class="container">
        <div class="section" id="coach">
            <h2>ТРЕНЕРСКИЙ СОСТАВ</h2>
            <ul class="coach-ul-items">
                @foreach (var item in Model.Coaches)
                {
                    <li class="coach-ul-items-item">
                        <img src="@item.ImagePath"/>
                        <h3>@item.Name</h3>
                        <text>@item.Description</text>
                        <text>@item.Level</text>
                    </li> 
                }
            </ul>
        </div>
    </div>
</div>
